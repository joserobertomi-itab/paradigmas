# Application Environment
APP_ENV=dev

# Database - Option 1: Full connection string (not used when individual components are set)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Database - Option 2: Individual components (used if DATABASE_URL not set)
POSTGRES_HOST=db
POSTGRES_DB=dbname
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:8000,http://127.0.0.1:5173

# Database Pool Configuration
DB_ECHO=False
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# FastAPI Backend URL (used by frontend to fetch cities)
VITE_API_BASE_URL=http://localhost:8000
